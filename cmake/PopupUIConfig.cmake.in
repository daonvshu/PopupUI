@PACKAGE_INIT@

foreach(comp IN LISTS ${CMAKE_FIND_PACKAGE_NAME}_FIND_COMPONENTS)
    set(targets_file "${CMAKE_CURRENT_LIST_DIR}/../${comp}/${comp}Targets.cmake")
    if(EXISTS "${targets_file}")
        include("${targets_file}")
        set(${CMAKE_FIND_PACKAGE_NAME}_${comp}_FOUND TRUE)
    else()
        set(${CMAKE_FIND_PACKAGE_NAME}_${comp}_FOUND FALSE)
        if(${CMAKE_FIND_PACKAGE_NAME}_FIND_REQUIRED_${comp})
            message(FATAL_ERROR "Required component '${comp}' not found")
        endif()
    endif()
endforeach()